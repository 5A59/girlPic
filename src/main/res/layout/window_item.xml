<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/img"
        android:layout_width="@dimen/upbutton"
        android:layout_height="@dimen/upbutton"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/upright"
        android:elevation="@dimen/floating_action_button_resting"
        android:src="@mipmap/loading"/>
        <!--app:floatingActionButtonColor="@color/per"-->
        <!--app:floatingActionButtonSize="mini"-->
        <!--app:fab_size="mini"-->
        <!--app:elevation="@dimen/floating_action_button_resting"-->
        <!--/>-->

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/upbutton"
        android:layout_toLeftOf="@+id/img"
        android:layout_marginRight="20dp"
        app:cardBackgroundColor="@color/main"
        app:elevation="@dimen/card_resting">

        <TextView
            android:id="@+id/textview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:background="@android:color/transparent"
            android:gravity="center"/>

    </android.support.v7.widget.CardView>

</RelativeLayout>
