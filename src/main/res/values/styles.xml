<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/main</item>
        <item name="android:colorPrimaryDark">@color/bar</item>
        <item name="android:colorAccent">@color/text</item>
        <item name="drawerArrowStyle">@style/toolbar</item>
    </style>

    <style name="popwindow">
        <item name="android:windowEnterAnimation">@anim/popwindow_in</item>
        <item name="android:windowExitAnimation">@anim/popwindow_out</item>
    </style>
    
    <style name="toolbar" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>

</resources>
